double CowDataPoint::operator[] (int i){
	int retVal = -1;
	switch(i){
		case 0:
			retVal = this->id;
			break;
		case 1:
			retVal = this->meanCalvingTime;
			break;
		case 2: 
			retVal = this->female;
			break;
		case 3: 
			retVal = this->age;
			break;
		case 4:
			retVal = this->numberOfCalves;
			break;
			
		case 5:
			retVal = causeOfDeath;
			break;
		case 6:
			retVal = firstCalvingTime;
			break;
		default:
			std::cerr << "Error: Asked CowDataPoint for index " << i << std::endl;
			break;
		
	}
	return retVal;
}
